    $(AM_CPPFLAGS)                       \
    -I$(INC_ROOT)src/adapters/include    \
    -I$(INC_ROOT)src/measurement/include \
    -I$(INC_DIR_DEFINITIONS)             \
    -I$(PUBLIC_INC_DIR)                  \
    $(UTILS_CPPFLAGS)

libscorep_adapter_mpi_mgmt_fortran_sub1_la_SOURCES = \
    $(SCOREP_MPI_MGMT_FORTRAN_SOURCES)
